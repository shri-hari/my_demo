<div class="container">
<div><h3>Update your details</h3></div>
<div>
<% form_for @user, :url => user_path(@user.id) do |f|%>
<%= f.error_messages %>

<p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
</p>
<p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
</p>
<p>
    <%= f.label :state %><br />
    <%= f.text_field :state %>
</p>
<p>
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
</p>
<p>
    <%= f.label :country %><br />
    <%= f.text_field :country %>
</p>
<p><%= f.submit "Submit" %></p>
<% end %>
</div>
</div>